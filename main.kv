#:kivy 2.1.0

# Login menu
<LoginMenuScreen>

    # Background image
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'bg.jpg'

    # Float screen
    FloatLayout:

        # Action bar
        ActionBar:
            pos_hint: {'top':1}
            background_color: "#000000"
            background_image: 'bg.jpg'
            ActionView:
                use_separator: True
                ActionPrevious:
                    markup: True
                    title: '[b][font=Barare]Login[/font][/b]'
                    with_previous: False
                    markup: True
                    app_icon: "icon.png"

        # Login text
        Label:
            markup: True 
            size_hint: .8, 0.2
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            text: "[b][font=Barare]Enter Login [/font][/b]"
            background_color: "#FFFFFF"


        # Password input
        TextInput:
            id: email
            size_hint: .5, None
            multiline: False
            height: "30dp"
            halign: "center"
            background_color: "#111111"
            foreground_color: "#FFFFFF"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            hint_text: "Email"

        
        TextInput:
            id: password
            size_hint: .5, None
            multiline: False
            height: "30dp"
            halign: "center"
            password: True
            background_color: "#111111"
            foreground_color: "#FFFFFF"
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            hint_text: "Password"

        # Submit button 
        Button:
            size_hint: .25, None
            height: "30dp"
            markup: True
            text: "[b][font=RobotoMono-Regular]Login[/font][/b]"
            background_color: "#111111"
            foreground_color: "#FFFFFF"
            password: True
            pos_hint: {"center_x": 0.375, "center_y": 0.3}
            on_press: root.login(email.text, password.text)
        
        # Quit button
        Button:
            size_hint: .25, None
            height: "30dp"
            markup: True
            text: "[b][font=RobotoMono-Regular]Quit[/font][/b]"
            background_color: "#111111"
            foreground_color: "#FFFFFF"
            password: True
            pos_hint: {"center_x": 0.625, "center_y": 0.3}
            on_press: exit()

        # Register button
        Button:
            size_hint: .5, None
            height: "30dp"
            markup: True
            text: "[b][font=RobotoMono-Regular]Create Account[/font][/b]"
            background_color: "#111111"
            foreground_color: "#000000"
            password: True
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'RegisterMenu'
        
        
# Main menu 
<MainMenuScreen>

    # Background image
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'bg.jpg'

    # Float layout
    FloatLayout:

        # Action bar
        ActionBar:
            pos_hint: {'top':1}
            background_color: "#444444"
            ActionView:
                use_separator: True
                ActionPrevious:
                    id: iptext
                    markup: True
                    title: '[b][font=Barare]LMS[/font][/b]'
                    with_previous: False
                    markup: True
                    app_icon: "icon.png"
                ActionButton:
                    icon: 'user.png'
                    size_hint: 0.1,0.7
                    pos_hint: {"center_y": 0.5}
                    on_press:
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'Profile'

        GridLayout:
            cols: 1
            id: box_root
            spacing: dp(10*Window.height/720)

            AnchorLayout:
                size_hint: (1, None)
                height: search_box.height

                GridLayout:
                    id: search_box
                    rows: 1
                    size_hint: (0.7, None)
                    height: self.minimum_height

                    TextInput:
                        id: searchbar
                        size_hint: (0.95, None)
                        height: self.minimum_height
                        font_name: "RobotoMono-Regular"
                        multiline: False
                        font_size: str((Window.height/720)*30) + 'sp'
                        foreground_color: app.text_color
                        background_color: app.tile_color
                        background_normal: 'atlas://data/images/defaulttheme/textinput_active'
                        cursor_color: app.accent_color
                        cursor_width: app.cursor_width

                    HoverIconButton:
                        id: search_button
                        icon: app.search_icon
                        tooltip_text: app.search_icon_tooltip
                        user_font_size: str((Window.height/720)*30) + 'sp'
                        theme_text_color: 'Custom'
                        text_color: app.title_text_color
                        on_release:
                            self.disabled = True if searchbar.text != "" else False
                            search_button.canvas.get_group('hidden')[0].rgba = app.bg_color if searchbar.text != "" else (0, 0, 0, 0)
                            self.canvas_opacity = 0
                            root.search(searchbar.text)
                        canvas:
                            Color:
                                group: 'hidden'
                                rgba: 0, 0, 0, 0
                            Rectangle:
                                size: self.size
                                pos: self.pos


            AnchorLayout:
                size_hint: (1, 0.75)

                ScrollView:
                    size_hint: (0.9, 0.9)
                    id: scroller
                    smooth_scroll_end: 10
                    bar_width: 10
                    scroll_type: ['bars']
                    bar_inactive_color: self.bar_color
                    effect_cls : 'ScrollEffect'
                    scroll_distance: dp((Window.height/720)*20)
                    scroll_wheel_distance: dp((Window.height/720)*30)

                    StackLayout:
                        id: scroll_box
                        size_hint_y: None
                        height: self.minimum_height
                        padding: dp(15), 0
                        spacing: dp((Window.height/720)*20)


        # Main menu button
        Button:
            font_name: 'Barare'
            size_hint: (0.5, 0.05)
            background_color: "#111111"
            foreground_color: "#000000"
            bold: True
            pos_hint: {"bottom":1, "left":1}
            text: 'MainMenu'
            disabled: True 
            disabled_color: "#FF0000"

        # Favorite menu button
        Button:
            font_name: 'Barare'
            size_hint: (0.5, 0.05)
            background_color: "#111111"
            foreground_color: "#000000"
            bold: True
            pos_hint: {"bottom":1, "right":1}
            text: 'Favorite'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'FavoriteMenu'
                root.manager.get_screen("FavoriteMenu").search()


# Book Card

<BookCard>:
    cols: 1
    size_hint: 1, None
    height: self.minimum_height
    md_bg_color: app.tile_color

    GridLayout:
        rows: 1
        id: box_top
        spacing: dp(20*Window.width/1280)
        padding: dp(10*Window.height/720)
        size_hint: 1, None
        height: self.minimum_height

        AnchorLayout:
            size_hint: 0.25, None
            height: max(cover.height, title.height)

            AsyncImage:
                id: cover
                source: ''
                size_hint_y: None
                height: Window.height/5
                allow_stretch: True
                nocache: True

        MDSeparator:
            orientation: 'vertical'
            color: app.text_color

        AnchorLayout:
            size_hint_y: None
            height: max(cover.height, title.height)
            anchor_x: 'left'

            GridLayout:
                id: title
                cols: 1
                spacing: dp(10*Window.height/720)
                size_hint_y: None
                height: self.minimum_height

                TextInput:
                    id: book_name
                    text: "My Book name"
                    size_hint: 1, None
                    height: self.minimum_height
                    font_name: "RobotoMono-Regular"
                    font_size: str(min(Window.height/720*22, Window.width/720*22)) + 'sp'
                    background_color: (0, 0, 0, 0)
                    background_disabled_normal: ''
                    disabled_foreground_color: app.text_color
                    disabled: True

                TextInput:
                    id: author_name
                    text: "My name"
                    size_hint: 1, None
                    height: self.minimum_height
                    font_name: "RobotoMono-Regular"
                    font_size: str(min(Window.height/720*22, Window.width/720*22)) + 'sp'
                    background_color: (0, 0, 0, 0)
                    background_disabled_normal: ''
                    disabled_foreground_color: app.text_color
                    disabled: True

                TextInput:
                    id: book_summary
                    text: "Summary"
                    size_hint: 1, None
                    height: self.minimum_height
                    font_name: "RobotoMono-Regular"
                    font_size: str(min(Window.height/720*22, Window.width/720*22)) + 'sp'
                    background_color: (0, 0, 0, 0)
                    background_disabled_normal: ''
                    disabled_foreground_color: app.text_color
                    disabled: True

                HoverFlatButton:
                    text: "Show description" if book_summary.text == "..." else "Hide description"
                    size_hint_y: None
                    height: author_name.height
                    on_release:
                        root.parent.parent.parent.parent.parent.parent.description(root)

    MDSeparator:
        color: app.text_color

    GridLayout:
        id: box_bottom
        rows: 1
        size_hint_y: None
        height: self.minimum_height
        spacing: dp(20*Window.width/1280)
        padding: dp(10*Window.height/720)

        TextInput:
            id: book_price
            text: "$69,420"
            size_hint: 0.25, None
            height: self.minimum_height
            font_name: "RobotoMono-Regular"
            font_size: str(min(Window.height/720*22, Window.width/720*22)) + 'sp'
            background_color: (0, 0, 0, 0)
            background_disabled_normal: ''
            disabled_foreground_color: app.text_color
            disabled: True
            halign: 'center'

        MDSeparator:
            orientation: 'vertical'
            spacing: dp(10*Window.height/720)
            color: app.text_color

        MDBoxLayout:
            spacing: dp(10*Window.height/720)
            id: favorite_area
            AnchorLayout:
            HoverFlatButton:
                id: favorite_btn
                text: "Add Favorite"
                size_hint: (0.6, 1)
                on_release:
                    root.parent.parent.parent.parent.parent.parent.set_favorite(root)


